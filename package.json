{
  "name": "spec-mcp",
  "version": "0.0.2",
  "description": "MCP server for spec development workflows",
  "type": "module",
  "main": "dist/server.js",
  "bin": {
    "spec-mcp": "./dist/server.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc && chmod +x dist/server.js",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "dev": "tsx src/server.ts",
    "start": "node dist/server.js",
    "prepare": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/karol-f/spec-mcp"
  },
  "keywords": [
    "mcp",
    "modelcontextprotocol",
    "ai",
    "development",
    "spec",
    "tasks"
  ],
  "author": "Development Team",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.5",
    "dotenv": "^16.4.7",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@jest/globals": "^30.1.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.1",
    "tsx": "^4.20.5",
    "typescript": "^5.9.2"
  }
}
